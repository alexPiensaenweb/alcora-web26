<script>
  function escapeHtml(value) {
    return value
      .replaceAll("&", "&amp;")
      .replaceAll("<", "&lt;")
      .replaceAll(">", "&gt;")
      .replaceAll('"', "&quot;")
      .replaceAll("'", "&#39;");
  }

  function getAssetUrl(fileId) {
    if (!fileId) return null;
    const base = document.body?.dataset?.directusUrl || window.__PUBLIC_DIRECTUS_URL || "";
    return `${base}/assets/${fileId}`;
  }

  function setupSearchSuggest(formId, inputId, dropdownId) {
    const input = document.getElementById(inputId);
    const dropdown = document.getElementById(dropdownId);
    const form = document.getElementById(formId);
    if (!input || !dropdown || !form || form.dataset.suggestReady === "1") return;

    form.dataset.suggestReady = "1";
    let timer;
    let selectedIndex = -1;

    const closeDropdown = () => {
      dropdown.classList.add("hidden");
      dropdown.innerHTML = "";
      selectedIndex = -1;
    };

    const highlightItem = (index) => {
      const items = dropdown.querySelectorAll("a");
      items.forEach((el, i) => {
        el.classList.toggle("bg-bg-light", i === index);
      });
      selectedIndex = index;
    };

    input.addEventListener("keydown", (e) => {
      const items = dropdown.querySelectorAll("a");
      if (!items.length || dropdown.classList.contains("hidden")) return;

      if (e.key === "ArrowDown") {
        e.preventDefault();
        highlightItem(selectedIndex < items.length - 1 ? selectedIndex + 1 : 0);
      } else if (e.key === "ArrowUp") {
        e.preventDefault();
        highlightItem(selectedIndex > 0 ? selectedIndex - 1 : items.length - 1);
      } else if (e.key === "Enter" && selectedIndex >= 0) {
        e.preventDefault();
        items[selectedIndex].click();
      } else if (e.key === "Escape") {
        closeDropdown();
      }
    });

    input.addEventListener("input", () => {
      const term = input.value.trim();
      clearTimeout(timer);

      if (term.length < 2) {
        closeDropdown();
        return;
      }

      timer = setTimeout(async () => {
        try {
          const res = await fetch(`/api/search/suggest?q=${encodeURIComponent(term)}`);
          const payload = await res.json();
          const items = payload.items || [];

          if (items.length === 0) {
            dropdown.innerHTML = `
              <div class="px-4 py-3 text-sm text-text-muted text-center">
                No se encontraron resultados
              </div>`;
            dropdown.classList.remove("hidden");
            return;
          }

          dropdown.innerHTML = items
            .map(
              (item) => {
                const imgUrl = item.imageUrl || getAssetUrl(item.imagen_principal);
                const imgHtml = imgUrl
                  ? `<img src="${imgUrl}" alt="" class="w-10 h-10 object-contain rounded" loading="lazy" />`
                  : `<div class="w-10 h-10 bg-bg-light rounded flex items-center justify-center">
                       <svg class="w-5 h-5 text-border" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                       </svg>
                     </div>`;
                const marcaHtml = item.marca
                  ? `<span class="text-[10px] font-semibold text-action/70 uppercase tracking-wide">${escapeHtml(item.marca)}</span>`
                  : "";

                return `
                  <a href="/catalogo/${escapeHtml(item.slug)}"
                     class="flex items-center gap-3 px-3 py-2.5 hover:bg-bg-light transition-colors border-b border-border last:border-b-0">
                    <div class="flex-shrink-0">${imgHtml}</div>
                    <div class="flex-1 min-w-0">
                      ${marcaHtml}
                      <p class="text-sm font-medium text-navy truncate">${escapeHtml(item.nombre)}</p>
                      <p class="text-[11px] text-text-muted">${escapeHtml(item.sku)}</p>
                    </div>
                  </a>`;
              }
            )
            .join("");

          selectedIndex = -1;
          dropdown.classList.remove("hidden");
        } catch {
          closeDropdown();
        }
      }, 160);
    });

    input.addEventListener("focus", () => {
      if (dropdown.innerHTML.trim()) dropdown.classList.remove("hidden");
    });

    document.addEventListener("click", (event) => {
      if (!form.contains(event.target)) closeDropdown();
    });
  }

  function setupMobileSearchOverlay() {
    const overlay = document.getElementById("mobile-search-overlay");
    const closeBtn = document.getElementById("mobile-search-close");
    const input = document.getElementById("mobile-search-input");
    const tabSearch = document.getElementById("tab-search");
    if (!overlay) return;

    function openSearch() {
      overlay.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      if (input) setTimeout(() => input.focus(), 100);
    }

    function closeSearch() {
      overlay.classList.add("hidden");
      document.body.style.overflow = "";
    }

    if (tabSearch) tabSearch.addEventListener("click", openSearch);
    if (closeBtn) closeBtn.addEventListener("click", closeSearch);

    // Close on link click inside search results
    overlay.addEventListener("click", (e) => {
      if (e.target.closest("a[href]")) closeSearch();
    });
  }

  function setupMobileCategoriesPanel() {
    const overlay = document.getElementById("mobile-categories-overlay");
    const panel = document.getElementById("mobile-categories-panel");
    const backdrop = document.getElementById("mobile-categories-backdrop");
    const tabCategories = document.getElementById("tab-categories");
    if (!overlay || !panel || !backdrop) return;

    function openCategories() {
      overlay.classList.remove("hidden");
      requestAnimationFrame(() => {
        panel.classList.remove("translate-y-full");
        panel.classList.add("translate-y-0");
      });
      document.body.style.overflow = "hidden";
    }

    function closeCategories() {
      panel.classList.remove("translate-y-0");
      panel.classList.add("translate-y-full");
      document.body.style.overflow = "";
      setTimeout(() => overlay.classList.add("hidden"), 300);
    }

    if (tabCategories) tabCategories.addEventListener("click", openCategories);
    if (backdrop) backdrop.addEventListener("click", closeCategories);

    // Close on link click
    panel.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", closeCategories);
    });
  }

  function setupBottomBarHighlight() {
    const path = window.location.pathname;
    const tabs = document.querySelectorAll("#mobile-bottom-bar [data-tab]");
    tabs.forEach((tab) => {
      const tabName = tab.getAttribute("data-tab");
      let isActive = false;
      if (tabName === "home" && path === "/") isActive = true;
      else if (tabName === "account" && path.startsWith("/cuenta")) isActive = true;
      else if (tabName === "cart" && path.startsWith("/carrito")) isActive = true;

      if (isActive) {
        tab.classList.remove("text-text-muted");
        tab.classList.add("text-action");
      }
    });
  }

  function syncCartBadge() {
    try {
      const stored = localStorage.getItem("alcora-cart");
      if (!stored) return;
      const cart = JSON.parse(stored);
      const items = cart?.items || [];
      const count = items.reduce((sum, i) => sum + (i.cantidad || 0), 0);
      const badge = document.getElementById("bottom-cart-badge");
      if (!badge) return;
      if (count > 0) {
        badge.textContent = count > 99 ? "99+" : String(count);
        badge.classList.remove("hidden");
      } else {
        badge.classList.add("hidden");
      }
    } catch {}
  }

  function initHeader() {
    // Desktop search suggest
    setupSearchSuggest("header-search-form", "header-search-input", "header-search-dropdown");
    // Mobile search suggest (inside overlay)
    setupSearchSuggest("mobile-search-form", "mobile-search-input", "mobile-search-dropdown");
    // Mobile overlays
    setupMobileSearchOverlay();
    setupMobileCategoriesPanel();
    // Bottom bar
    setupBottomBarHighlight();
    syncCartBadge();
  }

  initHeader();
  document.addEventListener("astro:page-load", initHeader);

  // Keep cart badge in sync
  window.addEventListener("storage", syncCartBadge);
  setInterval(syncCartBadge, 2000);
</script>
