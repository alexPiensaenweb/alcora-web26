    {/* Backdrop */}
    <div id="mobile-menu-backdrop" class="absolute inset-0 bg-black/40"></div>
    {/* Menu panel */}
    <nav class="absolute top-0 right-0 w-72 h-full bg-navy shadow-xl overflow-y-auto transform transition-transform duration-300 translate-x-full" id="mobile-menu-panel">
      <div class="py-4">
        {/* Categories section */}
        <p class="px-5 py-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">Categorias</p>
        <ul>
          <li><a href="/catalogo" class="block px-5 py-3 text-sm text-white hover:bg-white/10 transition-colors">Todos los productos</a></li>
          <li><a href="/categoria/productos-de-limpieza" class="block px-5 py-3 text-sm text-gray-300 hover:bg-white/10 hover:text-white transition-colors">Productos de Limpieza</a></li>
          <li><a href="/categoria/agua" class="block px-5 py-3 text-sm text-gray-300 hover:bg-white/10 hover:text-white transition-colors">Agua</a></li>
          <li><a href="/categoria/aire" class="block px-5 py-3 text-sm text-gray-300 hover:bg-white/10 hover:text-white transition-colors">Aire</a></li>
          <li><a href="/categoria/control-de-plagas" class="block px-5 py-3 text-sm text-gray-300 hover:bg-white/10 hover:text-white transition-colors">Control de Plagas</a></li>
