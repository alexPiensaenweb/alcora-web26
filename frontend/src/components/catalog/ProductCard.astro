---
import { getAssetUrl } from "../../lib/directus";
import { formatCurrency } from "../../lib/pricing";
import type { Producto } from "../../lib/types";

interface Props {
  product: Producto;
  price?: number | null; // Calculated price (null = not logged in)
}

const { product, price } = Astro.props;
const imageUrl = getAssetUrl(product.imagen_principal, {
  width: 420,
  height: 420,
  fit: "contain",
});
---

<article class="bg-white border border-border rounded-lg overflow-hidden hover:shadow-card transition-shadow group">
  <a href={`/catalogo/${product.slug}`} class="block">
    {/* Image */}
    <div class="aspect-square bg-white border-b border-border overflow-hidden p-4 flex items-center justify-center">
      {product.imagen_principal ? (
        <img
          src={imageUrl}
          alt={product.nombre}
          class="w-full h-full object-contain"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-text-muted">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      )}
    </div>

    {/* Info */}
    <div class="p-4">
      <p class="text-xs text-text-muted mb-1">{product.sku}</p>
      <p class="text-sm font-semibold text-navy line-clamp-2 mb-2 group-hover:text-action transition-colors">
        {product.nombre}
      </p>
      {product.extracto && (
        <p class="text-xs text-text-muted line-clamp-2 mb-3">{product.extracto}</p>
      )}
      {product.formato && (
        <p class="text-xs text-text-muted mb-2">{product.formato}</p>
      )}

      {/* Price */}
      {price !== undefined && price !== null ? (
        <p class="text-lg font-bold text-action">{formatCurrency(price)}</p>
      ) : (
        <p class="text-xs text-text-muted italic">
          <a href="/login" class="text-action hover:underline">Acceda</a> para ver precios
        </p>
      )}
    </div>
  </a>
</article>
